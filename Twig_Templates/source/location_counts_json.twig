{% extends "fullwidth.twig" %}

{% block content %}


<script type = "text/javascript" language = "javascript">

  //Call these functions upon page load
  $(document).ready(function() {
    //Convert the main table into a data table
    $('#the_main_table').DataTable({
      "paging":   true,
      "pageLength": 50,
      "lengthMenu": [ [50, 100, 500, -1], [50, 100, 500, "All"]],
      "aaSorting": [],
      "responsive": true,
      "autoWidth": false,
      "processing": true,
      "serverSide": true,
      "ajax": {
          "url": "/{{kennel_abbreviation}}/locationCounts",
          "type": "POST"
      },
      "columns": [
        { "data": "LOCATION", },
        { "data": "THE_COUNT" }
      ]
    });
  });


</script>

    <div class="table-responsive">
    <h3>{{pageTitle}}</h3>
    <h4>{{pageSubTitle}}</h4>
    <table class="table table-condensed table-hover" id="the_main_table">
      <thead>
        <tr>
          <th>Location Count</th>
          <td>Number of Events</td>
        </tr>
      </thead>
      <tbody>
    </table>
    </div>

{% endblock %}
