{% extends "fullwidth.twig" %}

{% block content %}

  <h1>{{pageTitle}}</h1>
  <h3>{{pageSubTitle}}</h3>
    <div class="table-responsive">
    <table class="table table-condensed table-hover" id="the_main_table">
      <thead>
        <tr>
          <th>Blank </th>
          <th>{{hasherName1}}</th>
          <th>{{hasherName2}}</th>
        </tr>
      </thead>
      <tbody>
        {% set winning = "#d4efdf" %}
        {% set losing = "#f2d7d5" %}
        {% set tying = "#fcf3cf" %}

        {% for item in tempList %}

          {% if item.verdict == 'hasher1'%}
            {% set t1bgcolor = winning %}
            {% set t2bgcolor = losing %}
          {% elseif  item.verdict == 'hasher2' %}
            {% set t1bgcolor = losing %}
            {% set t2bgcolor = winning %}
          {% else %}
            {% set t1bgcolor = tying %}
            {% set t2bgcolor = tying %}
          {% endif %}

          <tr>
            <td>{{item.statName}}</td>
            <td bgcolor="{{t1bgcolor}}">
              {% if item.dataType == "float" %}
                {{(item.val1 * 100) | number_format(0,'.',',')}} %
              {% elseif item.dataType == "int" %}
                {{item.val1}}
              {% elseif item.dataType == "date" %}
                {% if item.hashKey1 == "" %}
                  {{item.val1}}
                {% else %}
                  <a href=/{{kennel_abbreviation}}/hashes/{{item.hashKey1}}> {{item.val1}} </a>
                {% endif %}
              {% endif %}
            </td>


            <td bgcolor="{{t2bgcolor}}">
              {% if item.dataType == "float" %}
                {{(item.val2 * 100) | number_format(0,'.',',')}} %
              {% elseif item.dataType == "int" %}
                {{item.val2}}
              {% elseif item.dataType == "date" %}
                {% if item.hashKey2 == "" %}
                  {{item.val2}}
                {% else %}
                  <a href=/{{kennel_abbreviation}}/hashes/{{item.hashKey2}}> {{item.val2}} </a>
                {% endif %}
              {% endif %}
            </td>
          </tr>


        {% endfor %}
    </table>
    </div>
{% endblock %}
