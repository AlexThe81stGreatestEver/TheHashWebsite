{% extends "main_page.twig" %}

{% block main_page_content %}

      <div class="row marketing">
        <div class="col-lg-6">
          <h3>Standard Statistics</h3>
          <a href="/{{kennel_abbreviation}}/listhashers2">List of All Hashers (People and dogs)</a><br>
          <a href="/{{kennel_abbreviation}}/listhashes">List of All Hashes (Events)</a><br>
          <a href="/{{kennel_abbreviation}}/hashingCounts">Hashing Counts</a><br>
          <a href="/{{kennel_abbreviation}}/haringCounts">Overall Haring Counts (includes hyper hashes)</a><br>
