{% extends "fullwidth.twig" %}

{% block content %}
  <h1>{{pageTitle}}</h1>

  {% for alert in [ 'info', 'success', 'warning', 'danger'] %}
    {% for message in app.session.getFlashBag.get(alert) %}
        <div class="alert alert-{{ alert }} alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          {{ message|trans }}
        </div>
    {% endfor %}
  {% endfor %}

  <dl class="dl-horizontal">
    {{ form_start(form) }}
      {{ form_errors(form) }}

      <dt>Kennel Event Number</dt><dd>{{hashValue.KENNEL_EVENT_NUMBER}}</dd>
      <dt>Hash Key</dt><dd>{{hashValue.HASH_KY}}</dd>
      <dt>Kennel Ky</dt><dd>{{hashValue.KENNEL_KY}}</dd>

      {{ form_row(form.Event_Date) }}
      {{ form_row(form.Event_Location) }}
      {{ form_row(form.Event_City) }}
      {{ form_row(form.Event_State) }}
      {{ form_row(form.Special_Event_Description) }}
      {{ form_row(form.Virgin_Count) }}
      {{ form_row(form.Is_Hyper) }}
      {{ form_row(form._token) }}

    <button type="submit" class="btn btn-info">Send</button>
    {{ form_end(form, {'render_rest': false}) }}
  </dl>

{% endblock %}
