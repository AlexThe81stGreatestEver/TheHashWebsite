{% extends "fullwidth.twig" %}

{% block content %}

<script type = "text/javascript" language = "javascript">

  //Call these functions upon page load
  $(document).ready(function() {
    //Convert the main table into a data table
    $('#the_main_table').DataTable({
      "paging":   false,
      "aaSorting": []
    });

  });
</script>


  <h1>{{pageTitle}}</h1>
  <h3>{{pageSubTitle}}</h3>
  <div class="table-responsive">
  <table class="table table-condensed table-hover" id="the_main_table">
    <caption>{{tableCaption}}</caption>
    <thead>
      <tr>
        <th>Hash Number</th>
        <th>Number of Hashers</th>
        <td>Location</td>
        <td>Date</td>
        <td>Day Name</td>
        <td>City</td>
        <td>Description</td>
        <td>Is Hyper</td>
      </tr>
    </thead>
    <tbody>
      {% for item in theList %}
        {% if item.IS_HYPER == '0000000000' %}
          <tr>
        {% else %}
          <tr bgcolor = "#EDC9AF">
        {% endif %}
          <td><a href='/{{kennel_abbreviation}}/hashes/{{item.HASH_KY}}'>{{item.KENNEL_EVENT_NUMBER}}</a></td>
          <td>{{item.THE_COUNT}}</td>
          <td>{{item.EVENT_LOCATION}}</td>
          <td nowrap="nowrap">{{item.EVENT_DATE|date("Y/m/d", false)}}</td>
          <td>{{item.EVENT_DAY_NAME}}</td>
          <td>{{item.EVENT_CITY}}</td>
          <td>{{item.SPECIAL_EVENT_DESCRIPTION}}</td>
          <td>
            {% if item.IS_HYPER == '0000000000' %}No{% else %}Yes{% endif %}
          </td>
        </tr>
      {% endfor %}
  </table>
  </div>
{% endblock %}
