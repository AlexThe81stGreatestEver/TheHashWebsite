{% extends "fullwidth.twig" %}

{% block content %}

  {% if is_granted('ROLE_USER') %}
          Welcome {{ app.security.token.user.username }}! You are in the ROLE_USER role, and are very special.
          <a href="{{ path('logout') }}">Log out</a>
  {% elseif is_granted('ROLE_ADMIN') %}
          Welcome {{ app.security.token.user.username }}! You are in the ROLE_ADMIN role, and are very special.
          <a href="{{ path('admin_logoutaction') }}">Log out</a>
  {% elseif is_granted('ROLE_SUPERADMIN') %}
          Welcome {{ app.security.token.user.username }}! You are in the ROLE_SUPERADMIN role, and are very special.
          <a href="{{ path('admin_logoutaction') }}">Log out</a>
  {% else %}
      You seem not to be logged in.

      <div class="container">
        <div class="row">
            <div class="form_bg">
                <form action="{{ path('admin_login_check') }}" method="post">
                     <h2 class="text-center">Login Page</h2>
                    <br/>
                    <div class="form-group">
                        <input
                          type="userid"
                          class="form-control"
                          id="username"
                          type="text"
                          name="_username"
                          value="{{ last_username }}"
                          placeholder="Your secret hash userid"
                          >
                    </div>
                    <div class="form-group">
                        <input
                          type="password"
                          class="form-control"
                          id="password"
                          type="password"
                          name="_password"
                          placeholder="Your secret hash password"
                          >
                    </div>
                    <br/>
                    <div class="align-center">
                        <button type="submit" class="btn btn-default" id="login">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {% endif %}

{% endblock %}
