{% extends "main_page.twig" %}

{% block main_page_content %}

<style>
  .list-group-item-analversaries.active{
    background-color:"#00C851";
  }
</style>

<div class="row marketing">
  <div class="col-lg-6">
    <div class="list-group">
      <a href="#1" class="list-group-item active">Most Active</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/hashers/of/the/years'>Most active hashers by year</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/hares/overall/of/the/years'>Most active (overall) hares by year</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/hares/nonhyper/of/the/years'>Most active (true) hares by year</a>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="list-group">
      <a href="#2" class="list-group-item active">Years in review</a>
      {% for year_value in year_values %}
        <a class="list-group-item" href="/{{kennel_abbreviation}}/statistics/getYearInReview/{{year_value.YEAR}}">{{year_value.YEAR}} in review</a>
      {% endfor %}
    </div>
  </div>




{% endblock %}
