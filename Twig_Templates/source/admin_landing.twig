        <a href="/admin/newhash/form">Create a new event</a><br>
        <a href="/admin/modifyhasher/form/1432">Modify Elephant</a><br>
        <a href="/admin/newhasher/form">Create a person!</a><br>
        <a href="/admin/event/manageparticipation/989">Modify an event's participation</a><br>


    {% else %}
        You seem not to be logged in.
    {% endif %}

{% endblock %}
