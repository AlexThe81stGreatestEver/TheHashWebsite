{% extends "fullwidth.twig" %}

{% block content %}


<script type = "text/javascript" language = "javascript">

  function rfc3986EncodeURIComponent (str) {
      return encodeURIComponent(str).replace(/[!'()*]/g, escape);
  }

  function maskName (str) {

    //Establish the return value
    var returnValue = "";

    if(!str){
      returnValue = "";
    }else{
      for (var i = 0, len = str.length; i < len; i++) {
        if(i==0){
          returnValue +=(str[i]);
        }else{
          returnValue +="*";
        }
      }
    }

    //Return the return value
    return returnValue;
  }

  function maskEmail (str) {

    //Establish the return value
    var returnValue = "";

    if(!str){
      returnValue = "";
    }else{
      for (var i = 0, len = str.length; i < len; i++) {
        if(i==0){
          returnValue +=(str[i]);
        }else if(str[i]=="@"){
          returnValue +="@";
        }else if(str[i]=="."){
          returnValue +=".";
        }else{
          returnValue +="*";
        }
      }
    }

    //Return the return value
    return returnValue;
  }

  //Call these functions upon page load
  $(document).ready(function() {
    //Convert the main table into a data table
    $('#the_main_table').DataTable({
      "paging":   true,
      "pageLength": 50,
      "lengthMenu": [ [50, 100, 500, -1], [50, 100, 500, "All"]],
      "aaSorting": [],
      "responsive": true,
      "autoWidth": false,
      "processing": true,
      "serverSide": true,
      "ajax": {
        "url": "/{{kennel_abbreviation}}/cohareCounts",
        "type": "POST",
        "data": function ( d ) {
          return $.extend( {}, d, {
            "type": "{{type}}"
          } );
        },
      },
      "columns": [
        {
          "data": "HASHER_NAME1",
          "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
            $(nTd).html("<a href='/{{kennel_abbreviation}}/hashers/"+oData.HASHER_KY1+"?name="+ rfc3986EncodeURIComponent(oData.HASHER_NAME1)+"'>"+oData.HASHER_NAME1+"</a>");
          }
        },
        {
          "data": "HASHER_NAME2",
          "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
            $(nTd).html("<a href='/{{kennel_abbreviation}}/hashers/"+oData.HASHER_KY2+"?name="+ rfc3986EncodeURIComponent(oData.HASHER_NAME2)+"'>"+oData.HASHER_NAME2+"</a>");
          }
        },
        { "data": "THE_COUNT" }
      ]
    });
  });
</script>

    <div class="table-responsive">
    <h3>{{pageTitle}}</h3>
    <h4>{{pageSubTitle}}</h4>
    <table class="table table-condensed table-hover" id="the_main_table">
      <thead>
        <tr>
          <th>Hasher Name</th>
          <td>Hasher Name</td>
          <td>Co-Haring Count</td>
        </tr>
      </thead>
      <tbody>
    </table>
    </div>

{% endblock %}
