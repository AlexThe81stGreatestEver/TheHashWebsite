    "aaSorting": [],
    "responsive": true,
    "autoWidth": false,
    "processing": true,
    "serverSide": true,
    "ajax": {
        "url": "/{{kennel_abbreviation}}/listhashers2",
        "type": "POST"
    },
    "columns": [
