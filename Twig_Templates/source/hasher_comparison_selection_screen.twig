        "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
          $(nTd).html("<a href='javascript:selectPlayerOne("+oData.THE_KEY+")'>Select Player One </a>|<a href='javascript:selectPlayerTwo("+oData.THE_KEY+")'>Select Player Two </a>| " + oData.NAME + " | " + oData.HASHER_ABBREVIATION);
        }
     }
    ]
  });

});


