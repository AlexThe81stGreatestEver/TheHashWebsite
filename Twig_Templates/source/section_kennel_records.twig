{% extends "main_page.twig" %}

{% block main_page_content %}

<style>
  .list-group-item-analversaries.active{
    background-color:"#00C851";
  }
</style>

<div class="row marketing">
  <div class="col-lg-4">
    <div class="list-group">
      <a href="#1" class="list-group-item active">Highest Time Between Events</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/highest/averageDaysBetweenHashes'>Days Between Hashings</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/highest/allharings/averageDaysBetweenHarings'>Days Between (Overall) Harings</a>
      {% for hare_type in hare_types %}
        <a class="list-group-item" href='/{{kennel_abbreviation}}/highest/{{ hare_type.HARE_TYPE }}/averageDaysBetweenHarings'>Days Between ({{ hare_type.HARE_TYPE_NAME }}) Harings</a>
      {% endfor %}
    </div>
  </div>

  <div class="col-lg-4">
    <div class="list-group">
      <a href="#2" class="list-group-item active">Smallest Time Between Events</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/lowest/averageDaysBetweenHashes'>Days Between Hashes</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/lowest/allharings/averageDaysBetweenHarings'>Days Between (Overall) Harings</a>
      {% for hare_type in hare_types %}
        <a class="list-group-item" href='/{{kennel_abbreviation}}/lowest/{{ hare_type.HARE_TYPE }}/averageDaysBetweenHarings'>Days Between ({{ hare_type.HARE_TYPE_NAME }}) Harings</a>
      {% endfor %}
    </div>
  </div>

  <div class="col-lg-4">
    <div class="list-group">
      <a href="#3" class="list-group-item active">Percentages</a>
      {% for hare_type in hare_types %}
        <a class="list-group-item" href='/{{kennel_abbreviation}}/haringPercentage/{{ hare_type.HARE_TYPE }}'>Hashing To ({{ hare_type.HARE_TYPE_NAME }}) Haring Percentage</a>
      {% endfor %}
      <a class="list-group-item" href='/{{kennel_abbreviation}}/haringPercentageAllHashes'>Hashing To (Overall) Haring Percentage</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/percentages/percentageofharingsthatwerehypers'>Hyper to true haring percentages </a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/attendancePercentages'>Attendance Percentages</a>
    </div>
  </div>


</div>

<div class="row marketing">

  <div class="col-lg-6">
    <div class="list-group">
      <a href="#3" class="list-group-item active">Event Attendance</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/highest/attendedHashes'>Best Attended</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/lowest/attendedHashes'>Worst Attended</a>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="list-group">
      <a href="#3" class="list-group-item active">Miscellaneous</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/longest/career'>Longest careers</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/hashattendance/byhare/grandtotal/nondistincthashers'>Grand total attendance by hare</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/hashattendance/byhare/grandtotal/distincthashers'>Grand total (distinct) attendance by hare </a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/longestStreaks'>Longest Streaks</a>
    </div>
  </div>
</div>



{% endblock %}
