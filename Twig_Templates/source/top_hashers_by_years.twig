{% extends "fullwidth.twig" %}

{% block content %}

  <h1>{{pageTitle}}</h1>
  <h3>{{pageSubTitle}}</h3>
  {% for tempList in theListOfLists %}
    <div class="table-responsive">
    <h3>{{tempList[0].THE_YEAR}} ({{tempList[0].THE_YEARS_HASH_COUNT}} total hashes)</h3>
    <table class="table table-condensed table-hover" id="the_main_table">
      <thead>
        <tr>
          <th>Hashers </th>
          <th>Number of hashes</th>
          <th>Hashing Percentage</th>
        </tr>
      </thead>
      <tbody>
        {% for item in tempList %}
          <tr>
            <td><a href='/{{kennel_abbreviation}}/hashers/{{item.HASHER_KY}}'>{{item.HASHER_NAME}}</a></td>
            <td>{{item.THE_COUNT}}</td>
            <td>{{item.HASHING_PERCENTAGE | number_format(2, '.', ',')}}%</td>
          </tr>
        {% endfor %}
    </table>
    </div>
  {% endfor %}
{% endblock %}
