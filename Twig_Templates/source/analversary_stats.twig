{% extends "main_page.twig" %}

{% block main_page_content %}

      <div class="row marketing">
        <div class="col-lg-12">
          <div class="list-group">
            <a href="#1" class="list-group-item active">Pending Analversaries</a>
            <a class="list-group-item" href='/{{kennel_abbreviation}}/pendingHareAnalversaries'>Pending hare analversaries</a>
            <a class="list-group-item" href='/{{kennel_abbreviation}}/pendingHasherAnalversaries'>Pending hasher analversaries</a>
            <a class="list-group-item" href='/{{kennel_abbreviation}}/predictedHasherAnalversaries'>Predicted hasher analversaries (experimental)</a>
          </div>
        </div>
      </div>

      <div class="row marketing">
        <div class="col-lg-4">
          <div class="list-group">
            <a href="#3" class="list-group-item active">Quickest to reach Analversaries</a>
            {% set quickestArray = [5, 10, 25, 50, 69, 100, 169, 200, 300, 400, 500,600, 700, 800,900,1000] %}
            {% for quickestValue in quickestArray %}
              <a class="list-group-item" href="/{{kennel_abbreviation}}/{{quickestValue}}/quickest/to/reach/bydays">Quickest to {{quickestValue}} (in days)</a>
            {% endfor %}
        </div>
      </div>

        <div class="col-lg-4">
          <div class="list-group">
            <a href="#4" class="list-group-item active">Slowest to reach Analversaries</a>
            {% set slowestArray = [5, 10, 25, 50, 69, 100, 169, 200, 300, 400, 500,600, 700, 800,900,1000] %}
            {% for slowestValue in slowestArray %}
            <a class="list-group-item" href="/{{kennel_abbreviation}}/{{slowestValue}}/slowest/to/reach/bydays">Slowest to {{slowestValue}} (in days)</a>
            {% endfor %}
          </div>
        </div>

        <div class="col-lg-4">
          <div class="list-group">
            <a href="#5" class="list-group-item active">Chronological order of Analversaries</a>
            {% set chronoArray = [5, 10, 25, 50, 69, 100, 169, 200, 300, 400, 500,600, 700, 800,900,1000] %}
            {% for chronoValue in chronoArray %}
              <a class="list-group-item" href="/{{kennel_abbreviation}}/{{chronoValue}}/quickest/to/reach/date">{{chronoValue}} Hashes</a>
            {% endfor %}
          </div>
        </div>

      </div>

{% endblock %}
