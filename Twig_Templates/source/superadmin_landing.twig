{% extends "superadmin_base.twig" %}

{% block template %}

    <h1>{{pageTitle}}</h1>
    <h3>{{subTitle1}}</h3>

    {% if is_granted('ROLE_SUPERADMIN') %}
        Role: ROLE_SUPERADMIN.<br>
        User:{{ app.user.username }}<br>
        <a href="{{ path('superadmin_logoutaction') }}">Log out (Super Admin)</a><br>

        <div class="row marketing">
          <div class="col-lg-12"><div style="padding:2">
            <h4>Admin Users (Create New Users)</h4>
              {% set bgcolor = "#d1f2eb" %}
              {% set headerColor = "#d3d3d3" %}
              <div class="row" >
                <div class="col-xs-4 col-md-4 hidden-xs"  style="background-color:{{headerColor}};">Name</div>
                <div class="col-xs-4 col-md-4 hidden-xs"  style="background-color:{{headerColor}};">Role</div>
                <div class="col-xs-4 col-md-4 hidden-xs"  style="background-color:{{headerColor}};">Actions</div>
              </div>

              {% for item in user_list %}
                <div class="row">
                  <div class="col-xs-12 col-md-4 visible-xs"  style="background-color:{{headerColor}};">{{item.username}}</div>
                  <div class="col-xs-4 col-md-4 hidden-xs"    style="background-color:{{bgcolor}};">{{item.username}}</div>
                  <div class="col-xs-4 col-md-4 hidden-xs"    style="background-color:{{bgcolor}};">{{item.roles}}</div>
                  <div class="col-xs-4 col-md-4 hidden-xs"    style="background-color:{{bgcolor}};"><a href="/superadmin/{{item.id}}/edituser/ajaxform">Modify</a> | Delete</div>
                </div>
              {% endfor %}
          </div></div>
        </div>

        <div class="row marketing">
          <div class="col-lg-12"><div style="padding:2">
            <h4>Kennels (Create New Kennel)</h4>

              {% set headerColor = "#d3d3d3" %}
              <div class="row" >
                <div class="col-xs-4 col-md-3 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Name</div>
                <div class="col-xs-4 col-md-2 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Description</div>
                <div class="col-xs-4 col-md-1 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Abbreviation</div>
                <div class="col-xs-4 col-md-1 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">In Record Keeping</div>
                <div class="col-xs-4 col-md-3 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Address</div>
                <div class="col-xs-4 col-md-1 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Actions</div>
              </div>

              {% for item in kennel_list %}
                {% if item.IN_RECORD_KEEPING == 1 %}
                  {% set bgcolor = "#fdedec" %}
                {% elseif item.SITE_ADDRESS is not null%}
                  {% set bgcolor = "#eaeded" %}
                {% else %}
                  {% set bgcolor = "#d6eaf8" %}
                {% endif %}
                <div class="row">
                  <div class="col-xs-4 col-md-3 hidden-xs"    style="background-color:{{bgcolor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{item.KENNEL_NAME}}&nbsp;</div>
                  <div class="col-xs-4 col-md-2 hidden-xs"    style="background-color:{{bgcolor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{item.KENNEL_DESCRIPTION}}&nbsp;</div>
                  <div class="col-xs-4 col-md-1 hidden-xs"    style="background-color:{{bgcolor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{item.KENNEL_ABBREVIATION}}&nbsp;</div>
                  <div class="col-xs-4 col-md-1 hidden-xs"    style="background-color:{{bgcolor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                    {% if item.IN_RECORD_KEEPING == 0 %}
                      No
                    {% elseif item.IN_RECORD_KEEPING == 1 %}
                      Yes
                    {% endif %}
                  </div>
                  <div class="col-xs-4 col-md-3 hidden-xs"    style="background-color:{{bgcolor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{item.SITE_ADDRESS}}&nbsp;</div>
                  <div class="col-xs-4 col-md-1 hidden-xs"    style="background-color:{{bgcolor}};"><a href="/superadmin/{{item.KENNEL_ABBREVIATION}}/editkennel/ajaxform">Modify</a> | Delete</div>
                </div>
              {% endfor %}
          </div></div>
        </div>

        <h2>Manage system settings</h2>

        <div class="row marketing">
          <div class="col-lg-12"><div style="padding:2">
            <h4>Hash Types (Create New Hash Type)</h4>

              {% set headerColor = "#d3d3d3" %}
              <div class="row" >
                <div class="col-xs-4 col-md-1 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Sequence</div>
                <div class="col-xs-4 col-md-4 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Name</div>
                <div class="col-xs-4 col-md-1 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Actions</div>
              </div>

              {% for item in hash_types %}
                <div class="row">
                  <div class="col-xs-4 col-md-1 hidden-xs"    style="background-color:{{bgcolor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{item.SEQ}}&nbsp;</div>
                  <div class="col-xs-4 col-md-4 hidden-xs"    style="background-color:{{bgcolor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{item.HASH_TYPE_NAME}}&nbsp;</div>
                  <div class="col-xs-4 col-md-1 hidden-xs"    style="background-color:{{bgcolor}};"><a href="/superadmin/{{item.HASH_TYPE}}/edithashtype/ajaxform">Modify</a> | Delete</div>
                </div>
              {% endfor %}
          </div></div>
        </div>

        <div class="row marketing">
          <div class="col-lg-12"><div style="padding:2">
            <h4>Hare Types (Create New Hare Type)</h4>

              {% set headerColor = "#d3d3d3" %}
              <div class="row" >
                <div class="col-xs-4 col-md-1 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Sequence</div>
                <div class="col-xs-4 col-md-4 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Name</div>
                <div class="col-xs-4 col-md-2 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Chart Color</div>
                <div class="col-xs-4 col-md-1 hidden-xs"  style="background-color:{{headerColor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">Actions</div>
              </div>

              {% for item in hare_types %}
                <div class="row">
                  <div class="col-xs-4 col-md-1 hidden-xs"    style="background-color:{{bgcolor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{item.SEQ}}&nbsp;</div>
                  <div class="col-xs-4 col-md-4 hidden-xs"    style="background-color:{{bgcolor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{item.HARE_TYPE_NAME}}&nbsp;</div>
                  <div class="col-xs-4 col-md-2 hidden-xs"    style="background-color:{{bgcolor}}; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{item.CHART_COLOR}}&nbsp;</div>
                  <div class="col-xs-4 col-md-1 hidden-xs"    style="background-color:{{bgcolor}};"><a href="/superadmin/{{item.HARE_TYPE}}/editharetype/ajaxform">Modify</a> | Delete</div>
                </div>
              {% endfor %}
          </div></div>
        </div>
    {% else %}
        You seem not to be logged in.
        <a href="{{ path('superadmin_logoutaction') }}">Log out (Admin)</a><br>
    {% endif %}

{% endblock %}
