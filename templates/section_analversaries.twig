{% extends "main_page.twig" %}

{% block main_page_content %}

<style>
  .list-group-item-analversaries.active{
    background-color:"#00C851";
  }
</style>

<div class="row marketing">
  <div class="col-lg-12">
    <div class="list-group">
      <a href="#1" class="list-group-item active">Pending Analversaries</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/pendingHareAnalversaries'>Pending hare analversaries</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/pendingHasherAnalversaries'>Pending hasher analversaries</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/predictedHasherAnalversaries'>Predicted hasher analversaries (experimental)</a>
      <a class="list-group-item" href='/{{kennel_abbreviation}}/predictedCenturions'>Predicted centurions (experimental)</a>
    </div>
  </div>
</div>


<div class="container">
  {% set bgcolor = "#d6eaf8" %}
  {% set borderColor = "#d7bde2" %}
  {% for theCounter in 1..the_count %}
    {% if (((theCounter < 100) and ((theCounter ==5 ) or (theCounter is divisible by(10)) or (theCounter is divisible by(69))))or ((theCounter >= 100) and ((theCounter is divisible by(50)) or (theCounter is divisible by(69)) or ((theCounter - 69) is divisible by(100))))) %}

      <div class="row">
        <div class="col-xs-12 visible-xs"  style="background-color:{{bgcolor}};"><a href="/{{kennel_abbreviation}}/{{theCounter}}/quickest/to/reach/bydays">Quickest to {{theCounter}} hashings (in days)</a></div>
        <div class="col-xs-12 visible-xs"  style="background-color:{{bgcolor}};"><a href="/{{kennel_abbreviation}}/{{theCounter}}/slowest/to/reach/bydays">Slowest to {{theCounter}} hashings (in days)</a></div>
        <div class="col-xs-12 visible-xs"  style="background-color:{{bgcolor}};"><a href="/{{kennel_abbreviation}}/{{theCounter}}/quickest/to/reach/date">Chronological order To {{theCounter}} hashings</a></div>
        <div class="col-xs-12 visible-xs"  style="background-color:white;"><br></div>

        <div class="col-xs-4 hidden-xs" align=center  style="background-color:{{bgcolor}};"><a href="/{{kennel_abbreviation}}/{{theCounter}}/quickest/to/reach/bydays">Quickest to {{theCounter}} hashings (in days)</a></div>
        <div class="col-xs-4 hidden-xs" align=center style="background-color:{{bgcolor}}; border-left-color:{{borderColor}}; border-right-color:{{borderColor}};border-left-style:dashed; border-right-style:dashed "><a href="/{{kennel_abbreviation}}/{{theCounter}}/slowest/to/reach/bydays">Slowest to {{theCounter}} hashings (in days)</a></div>
        <div class="col-xs-4 hidden-xs" align=center style="background-color:{{bgcolor}};"><a href="/{{kennel_abbreviation}}/{{theCounter}}/quickest/to/reach/date">Chronological order To {{theCounter}} hashings</a></div>
      </div>
    {% endif %}
  {% endfor %}
</div>




{% endblock %}
