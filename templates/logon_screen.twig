{% extends "admin_base.twig" %}

{% block template %}

      <div class="container">
        <div class="row">
            <div class="form_bg">
                <form action="{{ path('app_login') }}" method="post">
                    <h2 class="text-center">Login Page</h2>
                    <br/>
                    {% if error %}
                        <h3>{{ error.messageKey|trans(error.messageData, 'security') }}</h3>
                    {% endif %}
                    <div class="form-group">
                        <input
                          type="userid"
                          class="form-control"
                          id="username"
                          type="text"
                          name="_username"
                          value="{{ last_username }}"
                          placeholder="Your secret hash userid">
                    </div>
                    <div class="form-group">
                        <input
                          type="password"
                          class="form-control"
                          id="password"
                          type="password"
                          name="_password"
                          placeholder="Your secret hash password">
                    </div>
                    <br/>
                    <div class="align-center">
                        <button type="submit" class="btn btn-default" id="login">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
